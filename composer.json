{
  "name": "tflori/orm",
  "description": "lightweight object relational mapper",
  "license": "MIT",
  "require": {
    "php": "^5.6 || ^7.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "mockery/mockery": "^1.1",
    "phpunit/phpunit": "^5.6",
    "squizlabs/php_codesniffer": "^2.7"
  },
  "suggest": {
    "mockery/mockery": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "ORM\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ORM\\Test\\": "tests/"
    }
  },
  "scripts": {
    "code-style": [
      "phpcs --standard=PSR2 src",
      "phpcs --standard=PSR2 --ignore=Examples tests"
    ],
    "coverage": "phpunit --coverage-text",
    "test": "phpunit --color=always"
  }
}
